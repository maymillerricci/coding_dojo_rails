<h2>All Comments</h2>

<p><%= link_to 'Add New Comment', new_comment_path %></p>

<table>
	<thead>
		<tr>
			<th>ID</th>
			<th>Product Name</th>
			<th>Author</th>
			<th>Content</th>
		</tr>
	</thead>
	<tbody>
		<% @comments.each do |comment| %>
			<tr>
				<td><%= comment.id %></td>
				<td><%= comment.product.name %></td>
				<td><%= comment.author %></td>
				<td><%= comment.content %></td> 
			</tr>
		<% end %>	
	</tbody>
</table>

<br>
<br>

<p><%= link_to 'All Products', products_path %></p>