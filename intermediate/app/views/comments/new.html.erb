<h1>New Comment</h1>

<%= simple_form_for @comment do |f| %>
 <%= f.error_notification %>
 <!-- if there's a product, select that product name as the default value -->
 <% if @product %>
 	<%= f.association :product, default: @product.name %> 
 <!-- otherwise the product name starts off blank -->
 <% else %>
 	<%= f.association :product %> 
 <% end %>
 <%= f.input :author %>
 <%= f.input :content %>
 <%= f.button :submit %>
<% end %>

<p><%= link_to 'All Products', products_path %></p>