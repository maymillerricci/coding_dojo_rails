<h1>All Products</h1>

<p class="success"><%= flash[:message] %></p>

<p><%= link_to 'Add New Product', new_product_path %></p>
<p><%= link_to 'View All Comments', comments_path %></p>

<% @products.each do |product| %>
	<table>
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Description</th>
				<th>Pricing</th>
				<th>Category</th>
				<th>Show</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
				<tr>
					<td><%= product.id %></td>
					<td><%= product.name %></td>
					<td><%= product.description %></td>
					<td>$<%= product.pricing %></td> 
					<td>
						<% if product.category_id %>
							<%= product.category.name %>
						<% end %>
					</td>
					<td><%= link_to 'Show', product_path(product) %></td>
					<td><%= link_to 'Edit', edit_product_path(product) %></td>
					<td><%= link_to 'Delete', product, method: :delete, confirm: "Are you sure you want to delete this product?" %></td>
				</tr>
		</tbody>
	</table>
					<h3>Comments:</h3>
				<% product.comments.each do |comment| %>
					<p class='comment'><%= comment.author %>: <%= comment.content %>
				<% end %>
	<p><%= link_to 'Add New Comment', new_product_comment_path(product), class: 'comment' %></p>
<% end %>
