<div class="container">
	<h2>View User Info</h2>
	<p>First Name: <%= @user.first_name %> </p>
	<p>Last Name: <%= @user.last_name %> </p>
	<p>Email Address: <%= @user.email %> </p>
	
	<hr>
	
	<h4>Comments:</h4>
	<% @comments.each do |comment| %>
		<p><%= comment.content %></p>
	<% end %>
	
	<hr>
	
	<% if signed_in? %>
		<h4>Post a new comment about this user below:</h4>
		<%= simple_form_for @comment, url: user_comments_path(@user) do |f| %>
			<%=f.input :content, label: 'Comment:' %>
			<%=f.button :submit, class: 'btn btn-primary' %>
		<% end %>
		<hr>
		<p><%= link_to 'Logout', session_path(current_user), method: :delete, class: 'btn btn-primary' %></p>
	<% else %>
		<p>Login to post a comment about this user</p>
		<%= link_to 'Login', new_user_path, class: 'btn btn-primary' %>
	<% end %>

	<p class='link'><%= link_to 'View All Users', users_path, class: 'btn btn-primary' %></p>

</div>
